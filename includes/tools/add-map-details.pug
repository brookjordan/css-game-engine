  let y = 0;
  while (y < map.height) {
    let x = 0;
    y += 1;
    while (x < map.width) {
      x += 1;
      let areaIndex = ((y - 1) * map.width) + ((x - 1) % map.width);
      let area = map.areas[areaIndex];
      if (!area) { continue; }
      let alt  = (y % 2 + x % 2) === 1 ? 'b' : 'a';

      Object.assign(area, {
        x,
        y,
        alt,
      });
    }
  }
