mixin print-map-values(map)
  each value in map.values
    -
      let valueName = value.name || value;
      let valueID = `value--${valueName}`;
      let valueTypes = (value.type ? [value.type] : value.types) || [];
      let valueClass = trim`
        value--name-${valueName}
        ${valueTypes.map(type => `value--type-${type}`).join(' ')}
      `;
    input.value(id=printID(valueID), class=`${valueClass}`, type='checkbox')
