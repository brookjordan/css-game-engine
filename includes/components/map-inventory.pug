mixin print-inventory(map)
  if map.useInventory
    input#inventory-open(type="checkbox")
    .inventory
      label.inventory__toggle(for="inventory-open")
      .inventory__container
        .inventory__contents
          each item in map.items
            if item.showInInventory
              label.posession-toggle(class=`posession-toggle--type-${item.type} posession-toggle--name-${item.name}`, for=`posession--${item.name}`)
